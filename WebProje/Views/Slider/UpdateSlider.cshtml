@model EntityLayer.Concrete.Slider

@{
    ViewData["Title"] = "UpdateSlider";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm("UpdateSlider", "Slider", FormMethod.Post))
{
    <form class="form-group">
        <br>
        @Html.HiddenFor(x=>x.SliderId)
        @Html.Label("Slider Title")
        @Html.TextBoxFor(x=>x.Title, new {@class="form-control"})
        <br />
        <label>Description</label>
        @Html.TextBoxFor(x=>x.Description, new {@class="form-control"})

        <br>
        <label>ImageUrl</label>
        @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control"})

        <br>
        <button class="btn btn-success">Save</button>
    </form>
}


