
<!-- Slide Indexi-->
@using EntityLayer.Concrete
@model List<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sliders</h4>
                <h4 class="card-title">Sliders</h4>

                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SliderId</td>
                                    <td>@item.Title</td>
                                    <td>@item.Description</td>
                                    <td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-outline-success">Update</a></td>
                                    <td></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Slider/CreateSlider/" class="btn btn-outline-info"> Create New Slider</a>
                </div>
            </div>
        </div>
    </div>




