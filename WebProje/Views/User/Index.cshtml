@using EntityLayer.Concrete
@model List<User>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
            <h4 class="card-title">Users</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.UserId</td>
                                <td>@item.Username</td>
                                <td>@item.Email</td>
                                <td><a href="/User/DeleteUser/@item.UserId" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/User/UpdateUser/@item.UserId" class="btn btn-outline-success">Update</a></td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/User/CreateUser/" class="btn btn-outline-info"> Create New User</a>
            </div>
        </div>
    </div>
</div>




