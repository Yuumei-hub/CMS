@using EntityLayer.Concrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Testimonials</h4>
            <h4 class="card-title">Testimonials</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Name</th>
                            <th>Comment</th>
                            <th>Date</th>
                            <th>Delete</th>
                            <th>Update</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.TestimonialId</td>
                                <td>@item.Name</td>
                                <td>@item.Comment</td>
                                <td>@item.Date</td>
                                <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Testimonial/UpdateTestimonial/@item.TestimonialId" class="btn btn-outline-success">Update</a></td>
                                <td></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="/Testimonial/CreateTestimonial/" class="btn btn-outline-info"> Create New Testimonial</a>
            </div>
        </div>
    </div>
</div>




